<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@mipmap/ss"
 >


    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="495dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:background="@mipmap/chuanglian"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="235dp"
            android:src="@mipmap/user" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="275dp"
            android:src="@mipmap/pwd" />
        <EditText
            android:id="@+id/login_edit_account"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            android:hint="请输入您的用户名"
            android:inputType="textPersonName"
            android:paddingLeft="38dp" />
        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/login_edit_account"

            android:layout_marginStart="-2dp"
            android:layout_marginTop="-19dp"
            android:ems="10"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:paddingLeft="45dp" />


        <TextView
            android:id="@+id/login_btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/login_edit_pwd"
            android:text="注销账号"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/login_edit_pwd"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="修改密码"
            android:textSize="15dp" />


        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_edit_pwd"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="79dp"
            android:background="@drawable/chang_btn_color"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/no_account"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/login_btn_login"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="没有账号？"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/login_btn_register"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/login_btn_login"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/no_account"
            android:text="立即注册"
            android:textSize="15dp"
            android:textColor="#42A4F3"/>
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_below="@+id/login_btn_register"
            android:layout_toRightOf="@+id/no_account"

            android:background="#42A4F3"/>



    </RelativeLayout>

    <TextView
            android:id="@+id/login_success_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff3f3f3f"
            android:textSize="20.0dip" />


</RelativeLayout>
